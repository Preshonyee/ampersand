{
  "name": "ampersand-api",
  "version": "1.0.0",
  "description": "backend API for ampersand",
  "main": "dist/index.js",
  "types": "./src/types/main.d.ts",
  "scripts": {
    "start": "npm run dev",
    "test": "jest",
    "build": "tsc",
    "lint": "eslint . & echo 'lint complete'",
    "dev": "ts-node-dev --respawn --transpile-only ./src/app.ts",
    "prod": "tsc && node ./built/src/app.js",
    "debug": "tsc && node --inspect ./built/src/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Preshonyee/ampersand-api.git"
  },
  "author": "Presh Onyee",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Preshonyee/ampersand-api/issues"
  },
  "homepage": "https://github.com/Preshonyee/ampersand-api#readme",
  "dependencies": {
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.7"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/morgan": "^1.9.2",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "concurrently": "^6.0.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tslint": "^6.1.3",
    "typescript": "^4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
