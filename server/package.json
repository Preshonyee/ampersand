  "description": "backend API for ampersand",
  "main": "./src/app.ts",
  "types": "./src/types/main.d.ts",
  "scripts": {
    "start": "npm run dev",
    "test": "jest",
    "build": "tsc",
    "lint": "eslint . --quiet --fix & echo 'lint complete'",
